<div id="profile-container">

    <div id="profile-header">
        {{>header inside=true}} 
    </div>

    <div id="profile-title">
        <h1>I'd love to know a bit more about you!</h1>
    </div>

    <div id="profile-subtext">
        <p>But you can also not tell me anything, up to you</p>
    </div>

    <div id="profile-form">
        <form action="" method="post">
            <div>
                <div class="label">

                    <label for="age">How old are you?</label>
                </div>
                <input type="number" name="age" class="age" min="0" max="110" />
            </div>
            <div>
                <div class="label">

                    <label for="city">Which city do you live in?</label>
                </div>
                <input type="text" name="city" class="city" />
            </div>

            <div>
                <div class="label">

                    <label for="website">Share your awesome website or a cool link!</label>
                </div>
                <input type="text" name="website" class="website" />
            </div>
            <div>
                <button>Continue</button>
                <h3 class="error-msg">{{error}}</h3>
            </div>
        </form>
    </div>

    <div id="footer">
        <footer>Â© Savas 2021</footer>
    </div>

</div>
